<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %> <!-- includes Bootstrap, Font Awesome, custom CSS -->
  <title>Contact</title>
</head>
<body>

  <%- include('partials/header') %> <!-- includes navigation -->

  <div class="container my-5" id="contact">
    <h2 class="text-center mb-4">Contact Me</h2>
    <form action="/contact" method="post" class="bg-dark p-4 rounded shadow text-white">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" id="name" name="name" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" id="email" name="email" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="message" class="form-label">Message</label>
        <textarea id="message" name="message" class="form-control" rows="5" required></textarea>
      </div>
      <button type="submit" class="btn btn-danger w-100">Send Message</button>
    </form>
  </div>

  <%- include('partials/footer') %> <!-- includes footer -->

</body>
</html>